
<form action="/visit" method="POST" role="form">

  <div class="form-group">
    <label>Your name</label>
    <input name="username" type="text" class="form-control" placeholder="put you name here" value = "<%=@username%>">
  </div>

  <div class="form-group">
    <label>You phone</label>
    <input name="phone" type="text" class="form-control" placeholder="put your phone number here" value = "<%=@phone%>">
  </div>

  <div class="form-group">
    <label>When do you plan to visit us?</label>
    <input name="datetime" type="text" class="form-control" placeholder="Please, choose your date and time" value = "<%=@datename%>">
  </div>

  <div class="form-group">
    <label>Choose your Barber</label>
      <select name = "barber" class="form-control">
      <% @results.each do |item|%>
      <option <%= @barber == item['barbername']? 'selected': '' %>><%= item['barbername'] %></option>  
      <%end%>
      </select>
  </div>

  <div class="form-group">
    <label>Choose a color for dyeing</label>
      <select id = "coloricker" name = "colorpicker">
      <option value= "#7bd148">Green</option>
      <option value= "#5484ed">Bold blue</option>
      <option value= "#a4bdfc">Blue</option>
      <option value= "#46d6bd">Turquoise</option>
      <option value= "#7ae7bf">Light green</option>
      <option value= "#51b749">Bold green</option>
      <option value= "#fbd75b">Yellow</option>
      <option value= "#ffb878">Orange</option>
      <option value= "#ff887c">Red</option>
      <option value= "#dc2127">Bold red</option>
      <option value= "#dbadff">Purple</option>
      <option value= "#e1e1e1">Grey</option>
      </select>
  </div>

  <button type="submit" class="btn btn-primary">enrol</button>

</form>


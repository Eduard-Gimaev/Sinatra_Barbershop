
<form action="/visit" method="POST" role="form">

  <div class="form-group">
    <label>Your name</label>
    <input name="username" type="text" class="form-control" placeholder="put you name here" value = "<%=@username%>">
  </div>

  <div class="form-group">
    <label>You phone</label>
    <input name="phone" type="text" class="form-control" placeholder="put your phone number here" value = "<%=@phone%>">
  </div>

  <div class="form-group">
    <label>When do you plan to visit us?</label>
    <input name="datetime" type="text" class="form-control" placeholder="Please, choose your date and time" value = "<%=@datename%>">
  </div>

  <div class="form-group">
    <label>Choose your Barber</label>
      <select name = "barber" class="form-control">
      <option <%= @barber == 'Andrew'? 'selected' : '' %>>Andrew</option>
      <option <%= @barber == 'Sergey'? 'selected' : '' %>>Sergey</option>
      <option <%= @barber == 'Tony'? 'selected' : '' %>>Tony</option>
      <option <%= @barber == 'Steave'? 'selected' : '' %>>Steave</option>
      <option <%= @barber == 'Greg'? 'selected' : '' %>>Greg</option>
      </select>
  </div>
  
  <div class="form-group">
    <label>Choose a color for dyeing</label>
      <select id = "color" name = "color">
      <option>red</option>
      <option>green</option>
      <option>yellow</option>
      <option>ginger</option>
      <option>blue</option>
      </select>
  </div>

  <button type="submit" class="btn btn-primary">enrol</button>

</form>